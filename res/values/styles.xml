<resources xmlns:android="http://schemas.android.com/apk/res/android">
     <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowContentOverlay">@null</item>

    </style>

   <style name="LoginInputFields">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_width">230dp</item>
        <item name="android:layout_height">30dp</item>     
        <item name="android:textColor">#D7D5D7</item>   
        <item name="android:textColorHighlight">#B9BEC0</item>
        <item name="android:background">@android:color/white</item>
    </style>
    
   <style name="loginBtnStyle">        
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:src">@drawable/picasa_sign_in</item>                        
        <item name="android:scaleType">centerInside</item>  
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
