<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_tab2"
    android:orientation="vertical" >

    <GridView
        android:id="@+id/gallery_grid_view"
        android:layout_width="935dp"
        android:layout_height="fill_parent"        
        android:gravity="center"
        android:horizontalSpacing="8dp"
        android:numColumns="4"
        android:padding="8dip"
        android:stretchMode="columnWidth"
        android:verticalSpacing="8dip"
         />

    <com.facebook.widget.LoginButton
        android:id="@+id/authButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/selected_pics_scroll"
        android:layout_width="200dp"
        android:layout_height="fill_parent"        
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/selected_board" >

        <LinearLayout
            android:id="@+id/selected_pics_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        </LinearLayout>
    </ScrollView>
    
</RelativeLayout>